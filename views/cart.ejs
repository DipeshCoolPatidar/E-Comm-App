<%- include('./partials/header') %>
    <% user.cart.forEach((item)=>{ %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10 ">
        <div class="w-[30%] rounded-md overflow-hidden text-[<%= item.textcolor %>]">
            <div class="w-full h-80 bg-[<%= item.bgcolor %>]  flex justify-center " >
                <img class="h-[18rem]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                <h3 class="text-2xl ">Clinge Bag</h3>
               
                <div class="flex items-center gap-2">
                    <a href="/increse/<%= item.id %>"><i class="w-7 h-7 bg-white flex rounded-full items-center justify-center fa fa-plus" aria-hidden="true"></i></a>
                    <div class="px-2 py-1 rounded-md bg-white text-black text-[<%= item.textcolor %>]">01</div>
                    <a href=""><i class="w-7 h-7 bg-white flex rounded-full items-center justify-center fa fa-minus" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[<%= item.panelcolor %>]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">₹ <%= Number(item.price)+20- Number(item.discount) %> </h2>
            </div>
        </div>
        <div class="w-[70%]">
            <div class="flex justify-between">
                <h3 class="text-xl"><%= item.name %></h3>
            <a class="text-2xl text-red-600" href="/removetocart/<%= item._id %>"> <i class="fa fa-times-circle" aria-hidden="true"></i></a>
            </div>
            
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= Number(item.price) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= Number(item.discount) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= Number(item.price)+20- Number(item.discount) %></h3>
            </div>
            
            
        </div>
    </div>
    <% }) %>
    <%- include('./partials/footer') %>